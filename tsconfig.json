{
  "compilerOptions": {
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "Node",
    // "rootDirs": ["src", "tests"],
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "preserveSymlinks": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "ts-node": {
    "files": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
